<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:descendantFocusability="blocksDescendants">


    <LinearLayout
        android:id="@+id/layout_decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/connection_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/split_name_description"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/connection_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_toRightOf="@id/connection_name"
            android:layout_alignTop="@+id/connection_name"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_decription"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/connection_edit"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            />

        <Button
            android:id="@+id/connection_remove"
            android:text="Remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_decription"
            android:layout_toStartOf="@+id/connection_edit" />

    </LinearLayout>



</RelativeLayout>